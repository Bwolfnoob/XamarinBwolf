<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Template="clr-namespace:BwolfXamarin.ListTemplates"
             x:Class="BwolfXamarin.ProdutosPage">
    <ContentPage.Content>
        <ListView
            x:Name ="ListViewProduto"
            HasUnevenRows="True"
            BackgroundColor="Orange"
            >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell StyleId="disclosure">
                        <Template:ProdutoTemplate></Template:ProdutoTemplate>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>